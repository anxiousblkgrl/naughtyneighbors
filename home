    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Confession Form Submission
        const confessionForm = document.getElementById('confessionForm');
        const confessionFormMessage = document.getElementById('confessionFormMessage');
        if (confessionForm) {
            confessionForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const story = document.getElementById('confession-story').value;
                if (story.trim() === '') {
                    confessionFormMessage.textContent = 'Please share your story or character description before submitting.';
                    confessionFormMessage.style.color = 'var(--hot-pink)';
                } else {
                    confessionFormMessage.textContent = 'Thank you! Your confession has been submitted (not really, this is a demo).';
                    confessionFormMessage.style.color = 'var(--dusty-rose)';
                    confessionForm.reset();
                }
            });
        }

        // Secret Form Submission
        const secretForm = document.getElementById('secretForm');
        const secretFormMessage = document.getElementById('secretFormMessage');
        if (secretForm) {
            secretForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const story = document.getElementById('secret-story').value;
                const agree = document.getElementById('secret-agree').checked;
                if (story.trim() === '') {
                    secretFormMessage.textContent = 'Please share your secret or character description before submitting.';
                    secretFormMessage.style.color = 'var(--hot-pink)';
                } else if (!agree) {
                    secretFormMessage.textContent = 'Please agree to the submission terms.';
                    secretFormMessage.style.color = 'var(--hot-pink)';
                }
                else {
                    secretFormMessage.textContent = 'Thank you! Your secret has been submitted (not really, this is a demo).';
                    secretFormMessage.style.color = 'var(--dusty-rose)';
                    secretForm.reset();
                }
            });
        }

        // Poll Form Submission
        const pollForm = document.getElementById('pollForm');
        const pollResults = document.getElementById('pollResults');
        if (pollForm) {
            pollForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const selectedOption = pollForm.querySelector('input[name="pollOption"]:checked');
                if (selectedOption) { // Corrected variable name here
                    pollResults.innerHTML = `Thank you for voting! <br>Current simulated results: <br>
                    Mysterious Newcomer: ${Math.floor(Math.random() * 30) + 20}% <br>
                    Couple Next Door: ${Math.floor(Math.random() * 25) + 15}% <br>
                    Accidental Encounter: ${Math.floor(Math.random() * 20) + 10}% <br>
                    Secret Admirer: ${Math.floor(Math.random() * 25) + 10}%`;
                    pollResults.style.color = 'var(--nude-blush)';
                } else {
                    pollResults.textContent = 'Please select an option to vote.';
                    pollResults.style.color = 'var(--hot-pink)';
                }
            });
        }

    </script>

